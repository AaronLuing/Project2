<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
</head>
<body>
    <%- include('../partials/nav.ejs') %>
    <a href="/show">Click Here for Movies</a>
    <a href="/new">Add a Movie</a>
    <form action="/search">
        <input type="text" name="title" placeholder="Find a movie">
        <input type="submit" value="Search">
    </form> 
    <div>
        <% for(let i=0; i<movies.length; i++){ %>
            <div>
                <h4><%= movies[i].title %> </h4>
                <a href="/<%= movies[i].id %>"><img src="<%= movies[i].poster %>"></a>
            </div>
        <% } %>
    </div>
    
</body>
</html>